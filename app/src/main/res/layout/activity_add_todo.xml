<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AddTodoActivity">


    <EditText
        android:id="@+id/edt_title_add_todo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_8"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:hint="@string/edt_title_hint_add_todo"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/spacing_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_contents_add_todo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/spacing_8"
        android:layout_marginTop="@dimen/spacing_16"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:hint="@string/edt_contents_hint_add_todo"
        android:inputType="textPersonName"
        android:paddingStart="@dimen/spacing_8"
        app:layout_constraintBottom_toTopOf="@+id/btn_cancel_add_todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_title_add_todo" />

    <Button
        android:id="@+id/btn_save_add_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_56"
        android:layout_marginBottom="@dimen/spacing_40"
        android:backgroundTint="#C3E8EC"
        android:text="@string/btn_save_add_todo"
        android:textColor="#F6F6F6"
        android:textSize="@dimen/body_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_cancel_add_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_56"
        android:layout_marginBottom="@dimen/spacing_40"
        android:backgroundTint="#C3E8EC"
        android:text="@string/btn_cancel_add_todo"
        android:textSize="@dimen/body_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>